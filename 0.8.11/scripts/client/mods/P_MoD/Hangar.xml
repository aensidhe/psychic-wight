<Hangar.xml>
	<!--	
		Редактируйте только Notepad++ или ему подобным редактором.
		Скачать можно тут: http://notepad-plus-plus.org/download 

		Модуль "Hangar" позволяет:
			Проводить разные операции в ангаре с помощью нажатий одной кнопки.

		*true - модуль включен
		*false - модуль отключен
	-->	
	<enable>false</enable>



	<!--	
		Снятие/одевание сменного оборудования в 1 клик

		*true - модуль включен
		*false - модуль отключен
	-->	
	<autoEquip>false</autoEquip>

	<!--	
		Кнопка по которой сработает функциия
		
		от KEY_F1 до KEY_F12
	-->

	<autoEquipKey>KEY_F3</autoEquipKey>		

	<!--	
		Приоритет сменного оборудования
		
		telescope - стерео труба
		mesh - маскировочная сетка
		toolbox - ящик с инструментами
		*Разделять пробелами (space)
	-->	
	<autoEquipPriority>telescope mesh toolbox</autoEquipPriority>
</Hangar.xml>