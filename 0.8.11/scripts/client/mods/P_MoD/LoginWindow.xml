<LoginWindow.xml>
	<!--	
		Редактируйте только Notepad++ или ему подобным редактором.
		Скачать можно тут: http://notepad-plus-plus.org/download 
		
		Модуль "LoginWindow" позволяет:
			Настроить экран входу в игру.

		*true - модуль включен
		*false - модуль отключен
	-->	
	<enable>true</enable>


	<!-- 
		Отключить автовыбор сервера в окне логина
		
		*true - поле выбора сервера будет запоминать ваш сервер
		*false - поле выбора сервера всегда будет в режиме Авто
	-->	
	<saveServer>true</saveServer>


	<!-- 
		Отключить проигрование стартового ролика
		
		*true - видео не будет играть
		*false - видео будет играть
	-->	
	<skipVideo>true</skipVideo>
</LoginWindow.xml>