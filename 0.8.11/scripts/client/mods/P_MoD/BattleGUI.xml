<BattleGUI.xml>
	<!--	
		Редактируйте только Notepad++ или ему подобным редактором.
		Скачать можно тут: http://notepad-plus-plus.org/download 
		
		Модуль "BattleGUI" позволяет:
			Изменить поведение интерфейса в бою.

		*true - модуль включен
		*false - модуль отключен
	-->	
	<enable>true</enable>

	<!-- 
		Стартовое отображение Панели игроков (ушей) при отсчете до начала боя.

		*Возможные значения - short (короткая), medium (средняя), medium2 (средняя 2), large (длинная).
		*Стандартное значение - large
	-->	
	<playersPanelState>large</playersPanelState>

	<!-- 
		Время отображения индикатора засвета

		*Значение указывается в секундах
		*Стандартное значение 2
	-->
	<sixSensDuration>10</sixSensDuration>
</BattleGUI.xml>